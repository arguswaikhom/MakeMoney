<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Material" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorPrimary">@android:color/black</item>
    </style>

    <style name="Material.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Material.NoActionBar.GreyStatusBar">
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Material.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Material.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="DialogActivity" parent="@style/Theme.AppCompat.Light.Dialog.Alert" />

    <style name="DialogActivity.NoActionBar" parent="@style/DialogTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ReactionButtonStyle" parent="@style/Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="iconTint">@android:color/white</item>
        <item name="rippleColor">@color/colorRipple</item>
    </style>
</resources>
